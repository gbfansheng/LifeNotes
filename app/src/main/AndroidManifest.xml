<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.threef.lifenotes">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CollectInfoActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_collect_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EPQActivity"
            android:label="@string/title_activity_epq"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EPQResultActivity"
            android:label="@string/title_activity_epqresult"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QueryActivity"
            android:label="@string/title_activity_daily_record"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
