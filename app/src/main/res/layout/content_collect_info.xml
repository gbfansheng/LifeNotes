<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/mainscrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    tools:showIn="@layout/activity_collect_info"
    tools:context="com.threef.lifenotes.CollectInfoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/sumlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="确定"
            android:layout_gravity="center_horizontal"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="取消"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_collect_info"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="用户昵称"
                android:maxLines="1"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="年龄"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/workage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="工作年限"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/job"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="岗位"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/carrertitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="职称"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/male"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:text="男"
                android:textSize="20dp"
                android:checked="true"
                />
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/female"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="女"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/marry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/ismarry"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="已婚"
                android:checked="true"
                />
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/nomarry"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="未婚"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/smoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/smokeyes"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="吸烟"
                android:checked="true"
                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/smokeyear"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:inputType="number" />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:text="年"
                android:textSize="20dp"/>
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/smokeno"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="不吸烟"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/drinkyes"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="喝酒"
                android:checked="true"
                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/drinkyear"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:inputType="number" />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:text="年"
                android:textSize="20dp"/>
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/drinkno"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="不喝酒"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/diet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/dietyes"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="节食"
                android:checked="true"
                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/dietyear"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:inputType="number"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:text="年"
                android:textSize="20dp"/>
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/dietno"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="不节食"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/fityes"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="健身"
                android:checked="true"
                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/fityear"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:inputType="number"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:text="年"
                android:textSize="20dp"/>
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/fittemp"
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="偶尔健身"/>
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/fitno"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:text="不健身"/>
        </RadioGroup>

        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical">-->
            <!--<EditText-->
                <!--android:id="@+id/heartrate"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="48dp"-->
                <!--android:hint="请输入平均心率"-->
                <!--android:inputType="number"-->
                <!--android:maxLines="1"-->
                <!--android:singleLine="true"/>-->

        <!--</android.support.design.widget.TextInputLayout>-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/worktime"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="平均工作时间"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/pincome"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="个人月平均收入"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/fincome"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="家庭月平均收入"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="身高"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/height"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="cm"
                android:textSize="20dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="     体重"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/weight"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="kg"
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="居住地区:"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/qu"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:maxLines="1"
                        android:singleLine="true"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="区"
                        android:textSize="20dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/jiedao"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:maxLines="1"
                        android:singleLine="true"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="街道"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/lu"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:maxLines="1"
                        android:singleLine="true"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="路"
                        android:textSize="20dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="睡眠状况:"
                android:textSize="20dp"/>
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sleep"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:entries="@array/sleeparray"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="生活压力:"
                android:textSize="20dp"/>
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/pressure"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:entries="@array/pressurearray"/>
        </LinearLayout>

    </LinearLayout>
    </FrameLayout>
</ScrollView>
