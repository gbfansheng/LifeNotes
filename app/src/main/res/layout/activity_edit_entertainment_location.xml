<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点:"
        android:id="@+id/textView7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <com.threef.lifenotes.ToggleButtonGroupTableLayout android:id="@+id/entertainment_location_group"
        android:contentDescription="地点" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

    <TableRow>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咖啡馆"
                    android:id="@+id/radioButton"
                    android:checked="false"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影院"
                android:id="@+id/radioButton2"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酒吧"
                android:id="@+id/radioButton5"
                android:checked="false" />

    </TableRow>
    <TableRow>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KTV"
                android:id="@+id/radioButton3"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="茶室"
                android:id="@+id/radioButton4"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:id="@+id/radioButton6"
                android:checked="false" />

    </TableRow>
    <TableRow>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="棋牌室"
                android:id="@+id/radioButton7"
                android:checked="false" />

    </TableRow>

    </com.threef.lifenotes.ToggleButtonGroupTableLayout>
</LinearLayout>